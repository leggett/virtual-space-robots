use("robot_api", <robot>)

fn(<turn_to>): {
    if(lt(p(0), 180)): {
        robot.turn(p(0))
    } else: {
        robot.turn(-(p(0), 360))
    }
}

let(<last_position>): ""

while: {
    let(<i>): 0
    let(<max_dist>): 0
    let(<max_angle>): 0
    let(<killed>): false

    while: {
        if(eq(robot.raycast, "ship")): {
            killed: true
            robot.shoot()
            return(false)
        }
        
        if(gt(robot.raycast_dist, max_dist)): {
            max_dist: robot.raycast_dist
            max_angle: i
        }

        robot.turn(10)
        i: +(i, 10)

        if(eq(i, 360)):
            return(false)
    }

    if(killed): return(false)
    
    turn_to(max_angle)
    robot.move(-(max_dist, 50))
    turn_to(-(360, max_angle))

    last_position: +(str(robot.x), ":", str(robot.y))
    print(seen_positions)
}