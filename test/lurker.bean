use("robot_api", <robot>)

fn(<turn_to>): {
    let(<angle>): -(p(0), *(floor(/(p(0), 360)), 360))
    if(lt(angle, 180)): {
        robot.turn(angle)
    } else: {
        robot.turn(-(angle, 360))
    }
}

let(<i>): 0
let(<min_dist>): 1000
let(<min_angle>): 0

while: {
    if(
        and(
            lt(robot.raycast_dist, min_dist), 
            eq(robot.raycast, "rock")
        )
    ): {
        min_dist: robot.raycast_dist
        min_angle: i
    }

    if(eq(robot.raycast, "ship")): {
        robot.shoot()
    }

    robot.turn(10)
    i: +(i, 10)

    return(not(eq(i, 360)))
}

turn_to(min_angle)
robot.move(-(min_dist, 5))

while: {
    if(eq(robot.raycast, "ship")): robot.shoot()
    else_if(and(eq(robot.raycast, "rock"), lt(robot.raycast_dist, 40))): while: {
        robot.turn(100)
        return(lt(robot.raycast_dist, 40))
    }

    robot.turn(5)
}