use("robot_api", <robot>)

fn(<turn_to>): {
    let(<angle>): -(p(0), *(floor(/(p(0), 360)), 360))
    if(lt(angle, 180)): {
        robot.turn(angle)
    } else: {
        robot.turn(-(angle, 360))
    }
}

let(<i>): 0
let(<min_dist>): 1000
let(<min_angle>): 0

while: {
    if(
        and(
            lt(robot.raycast_dist, min_dist), 
            eq(robot.raycast, "wall")
        )
    ): {
        min_dist: robot.raycast_dist
        min_angle: i
    }

    if(eq(robot.raycast, "ship")): {
        robot.shoot()
    }

    robot.turn(10)
    i: +(i, 10)

    return(not(eq(i, 360)))
}

turn_to(min_angle)
robot.move(+(robot.raycast_dist, 100))

sleep(1000) // wait for shybot to position itself

// screen is 1200x960
if(or(lt(robot.x, 40), gt(robot.x, 1160))): {
    turn_to(-(90, robot.rotation))
    robot.move(-(ifv(lt(robot.y, 480), 40, 970), robot.y))
    if(lt(robot.x, 40)): {
        robot.turn(-90)
        robot.shoot()
        robot.shoot()
        robot.shoot()
        robot.turn(90)
    } else: {
        robot.turn(90)
        robot.shoot()
        robot.shoot()
        robot.shoot()
        robot.turn(=90)
    }
    robot.move(-(ifv(lt(robot.y, 480), 970, 40), robot.y))
    if(lt(robot.x, 40)): {
        robot.turn(-90)
        robot.shoot()
        robot.shoot()
        robot.shoot()
    } else: {
        robot.turn(90)
        robot.shoot()
        robot.shoot()
        robot.shoot()
    }
} else_if(or(lt(robot.y, 40), gt(robot.y, 920))): {
    turn_to(-(0, robot.rotation))
    robot.move(-(ifv(lt(robot.x, 600), 40, 1240), robot.x))
    if(lt(robot.y, 40)): {
        robot.turn(90)
        robot.shoot()
        robot.shoot()
        robot.shoot()
        robot.turn(-90)
    } else: {
        robot.turn(-90)
        robot.shoot()
        robot.shoot()
        robot.shoot()
        robot.turn(90)
    }
    robot.move(-(ifv(lt(robot.x, 600), 1240, 40), robot.x))
    if(lt(robot.y, 40)): {
        robot.turn(90)
        robot.shoot()
        robot.shoot()
        robot.shoot()
    } else: {
        robot.turn(-90)
        robot.shoot()
        robot.shoot()
        robot.shoot()
    }
}

robot.move(100)
